generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model contactMessage {
  id         Int       @id(map: "messages_pkey") @default(autoincrement())
  name       String?   @db.VarChar(100)
  message    String?
  created_at DateTime? @default(now()) @db.Timestamp(6)
  seen       Boolean?  @default(false)

  @@map("contactmessage")
}

model Image {
  id          Int     @id @default(autoincrement())
  image       Bytes
  title       String
  description String?

  ImageLarge ImageLarge[]

  @@map("image")
}

model ImageLarge {
  id          Int     @id @default(autoincrement())
  image       Bytes
  title       String
  description String?
  imageId     Int

  imageSmall Image @relation(fields: [imageId], references: [id])

  @@map("image_large")
}
